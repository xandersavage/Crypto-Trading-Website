script.
  function copyToClipboard(elementId, button) {
    var copyText = document.getElementById(elementId);
    copyText.select();
    document.execCommand("copy");
    button.textContent = "Copied";
    setTimeout(() => {
      button.textContent = "Copy";
    }, 2000);
  }

